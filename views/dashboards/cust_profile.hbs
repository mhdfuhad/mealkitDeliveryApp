<div class="container-fluid">
    <div class="row">
        <div class="col-sm-5">
            <div class="row ml-2">
                <h1 class="font mt-2">{{user.firstName}}'s Profile</h1>
            </div>
            <div class="row ml-2">
                <h4 class="font">Full Name:</h4>
                <h4> &nbsp;{{user.firstName}} {{user.lastName}}</h4>
            </div>
            <div class="row ml-2">
                <h4 class="font">Email:</h4>
                <h4> &nbsp;{{user.email}}</h4>
            </div>
            
        </div>
        <div class="col-sm-7 mt-2">
            <h1 class="text-center font">Shopping Cart</h1>
            <h4 class="text-center h5 mb-1 col2">{{message}}</h4>
                <div class="row pt-2 pb-1 mb-2 font cart">
                    <div class="col-md-5">
                        <h4 class="text-left">Name</h4>
                    </div>
                    <div class="col-md-4">
                        <h4 class="text-center">Quantity</h4>
                    </div>
                    <div class="col-md-2">
                        <h4 class="text-right">Price/each</h4>
                    </div>
                </div>
                {{#if cart}}
                {{#each cart}}
                <div class="row">
                    <div class="col-md-3 d-flex">
                        <p class="text-left h5 align-self-center">{{meal.name}}</p>
                    </div>
                    <div class="col-md-2 my-2 text-center">
                        <img src="{{meal.imageUrl}}" alt="mealIMG" style="width: 80px;" class="rounded"/>
                    </div>
                    <div class="col-md-4 h5 align-self-center">
                        <div class="row text-center">
                            <div class="col p-0">
                                <a class="dec" href="/removefromCart/remove/{{_id}}">-</a>
                            </div>
                            <div class="col p-0">
                                <p class="text-center mb-0 p-0">{{qty}}</p>
                            </div>
                            <div class="col p-0">
                                <a class="dec" href="/addtoCart/cart/{{_id}}">+</a> 
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 h5 align-self-center">
                        <p class="text-right mb-0 mr-2">${{meal.price}}</p>
                    </div>
                    <div class="col-md-1 h5 text-center align-self-center">
                        <a class="dec" href="/removefromCart/delete/{{_id}}">x</a>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <h5 class="text-center p-5 font">Cart Empty</h5>
                {{/if}}
                <div class="row pt-2 pb-0 mb-2 cart">
                    <div class="col-5">
                        <h4 class="text-left font">Total</h4>
                    </div>
                    <div class="col-4 pr-0">
                        <h4 class="text-center">{{qtyTot}}</h4>
                    </div>
                    <div class="col-2 pr-0">
                        <h4 class="text-right">${{total}}</h4>
                    </div>
                </div>
            <form action="/dashboard/customer" method="POST">
                <div class="my-2 mr-3 bt11">
                    <input type="hidden" name="qty" value="{{qtyTot}}">
                    <button class=" btn-lg btn-block" type="submit" name="order" value="{{total}}">Place Your Order</button>
                </div>
            </form>
        </div>
    </div>
</div>